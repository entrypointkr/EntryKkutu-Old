<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.rvs.entrykkutu.gui.Controller">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <bottom>
        <TextField BorderPane.alignment="CENTER"/>
    </bottom>

    <center>
        <SplitPane dividerPositions="0.6957746478873239" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   BorderPane.alignment="CENTER">
            <items>
                <TableView fx:id="roomView" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn text="번호">
                            <cellValueFactory>
                                <PropertyValueFactory property="id"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="제목">
                            <cellValueFactory>
                                <PropertyValueFactory property="title"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="모드">
                            <cellValueFactory>
                                <PropertyValueFactory property="mode"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="라운드">
                            <cellValueFactory>
                                <PropertyValueFactory property="round"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="시간">
                            <cellValueFactory>
                                <PropertyValueFactory property="time"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="인원">
                            <cellValueFactory>
                                <PropertyValueFactory property="personnel"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="잠금">
                            <cellValueFactory>
                                <PropertyValueFactory property="password"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <TextArea fx:id="chatArea" editable="false" prefHeight="200.0" prefWidth="200.0"/>
            </items>
        </SplitPane>
    </center>
</BorderPane>